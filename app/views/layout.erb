    <title>MyCocktail</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

     <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">


            

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body class="grey lighten-3">
  <!-- navigation-->
    
      <nav class="indigo dark-3">
        <div class="container">
          <a href="/" class="brand-logo">Home</a>
          
          <ul class ="right">
            <% unless logged_in? %>
            <li><a href="/signup">Create Account</a></li>
            <li><a href="/login">Login</a></li>
            <% else %>
              <li>Hello, <%= current_user.username %>, Welcome Back!</li>
              <li><a href="/cocktails">myCocktails</a></li>
              <li><a href="/logout">Logout</a></li>
            <% end %>
          </ul>
        </div>
      </nav>
      <!-- end navigation -->
      <!-- errors -->
          <% if flash[:error] %>
          <% flash[:error].each do |error| %>
            <div>
              <%= error %>
            </div>
          <% end %>
        <% end %>
        <% if flash[:notice] %>
          <div>
            <%= flash[:notice] %>
          </div>
        <% end %>
        <!-- end errors -->
<!-- main content -->
  <div class="container grey lighten-4 z-depth-5" style="margin-top: 25px; margin-bottom: 25px; padding: 25px;">
        <%= yield %>
        </div>
<!-- end main content -->        
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

